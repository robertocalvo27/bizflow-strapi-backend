{
  "kind": "component",
  "collectionName": "components_seo_seos",
  "info": {
    "displayName": "SEO",
    "description": "Configuraci√≥n SEO para contenido"
  },
  "options": {
    "draftAndPublish": false
  },
  "attributes": {
    "metaTitle": {
      "type": "string",
      "required": true,
      "maxLength": 60
    },
    "metaDescription": {
      "type": "text",
      "required": true,
      "maxLength": 160
    },
    "keywords": {
      "type": "text",
      "regex": "^[^,]+(,[^,]+)*$",
      "hint": "Palabras clave separadas por comas"
    },
    "ogImage": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "ogDescription": {
      "type": "text",
      "maxLength": 200
    },
    "canonicalURL": {
      "type": "string",
      "format": "uri"
    }
  }
} 