{
  "collectionName": "components_shared_seos",
  "info": {
    "displayName": "SEO",
    "description": "Search Engine Optimization metadata"
  },
  "options": {},
  "attributes": {
    "metaTitle": {
      "type": "string",
      "required": true,
      "maxLength": 60
    },
    "metaDescription": {
      "type": "text",
      "required": true,
      "maxLength": 160
    },
    "keywords": {
      "type": "text",
      "regex": "^[a-zA-Z0-9]+(,[a-zA-Z0-9]+)*$",
      "customField": {
        "hint": "Comma-separated keywords"
      }
    },
    "metaImage": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "canonicalURL": {
      "type": "string",
      "regex": "^https?:\\/\\/(?:www\\.)?[-a-zA-Z0-9@:%._\\+~#=]{1,256}\\.[a-zA-Z0-9()]{1,6}\\b(?:[-a-zA-Z0-9()@:%_\\+.~#?&\\/=]*)$"
    }
  }
} 