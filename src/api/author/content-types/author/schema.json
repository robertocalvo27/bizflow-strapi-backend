{
  "kind": "collectionType",
  "collectionName": "authors",
  "info": {
    "singularName": "author",
    "pluralName": "authors",
    "displayName": "Author",
    "description": "Autores del blog"
  },
  "options": {
    "draftAndPublish": false
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "position": {
      "type": "string"
    },
    "bio": {
      "type": "richtext"
    },
    "email": {
      "type": "email",
      "required": true,
      "unique": true
    },
    "photo": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "socialNetworks": {
      "type": "component",
      "component": "shared.social-network",
      "repeatable": true,
      "max": 5
    },
    "posts": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::post.post",
      "mappedBy": "author"
    }
  }
} 